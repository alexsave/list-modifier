{
  "manifest_version": 3,
  "name": "Deletable Item List",
  "version": "1.0",
  "description": "Turns any list into a deletable item list.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
  //"web_accessible_resources": [{
      //"resources": ["content.js"],
      //"matches": ["<all_urls>"]
  //}]
}

